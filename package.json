{
  "name": "js-eyes",
  "version": "1.4.0",
  "private": true,
  "description": "JS Eyes - Browser Extension for JavaScript debugging",
  "scripts": {
    "build": "node releases/build.js all",
    "build:chrome": "node releases/build.js chrome",
    "build:firefox": "node releases/build.js firefox",
    "build:firefox:dev": "node releases/build.js firefox --no-sign",
    "bump": "node releases/build.js bump",
    "test": "node --test server/ws-handler.test.js firefox-extension/background/utils.test.js",
    "test:server": "node --test server/ws-handler.test.js",
    "test:extension": "node --test firefox-extension/background/utils.test.js",
    "server": "node server/index.js",
    "server:install": "cd server && npm install"
  },
  "dependencies": {
    "archiver": "^7.0.1"
  }
}
