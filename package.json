{
  "name": "js-eyes",
  "version": "1.4.0",
  "private": true,
  "description": "JS Eyes - Browser Extension for JavaScript debugging",
  "scripts": {
    "dev": "npx serve src",
    "build": "node build/build.js",
    "build:site": "node cli/cli.js build site --clean",
    "build:chrome": "node cli/cli.js build chrome",
    "build:firefox": "node cli/cli.js build firefox",
    "build:firefox:dev": "node cli/cli.js build firefox --no-sign",
    "preview": "npx serve docs -l 3000",
    "cli": "node cli/cli.js",
    "bump": "node cli/cli.js bump",
    "commit": "node cli/cli.js commit",
    "sync": "node cli/cli.js sync",
    "release": "node cli/cli.js release",
    "setup:gh-pages": "node cli/cli.js setup-github-pages",
    "setup:cloudflare": "node cli/cli.js setup-cloudflare",
    "test": "node --test server/ws-handler.test.js firefox-extension/background/utils.test.js",
    "test:server": "node --test server/ws-handler.test.js",
    "test:extension": "node --test firefox-extension/background/utils.test.js",
    "server": "node server/index.js",
    "server:install": "cd server && npm install"
  },
  "dependencies": {
    "archiver": "^7.0.1"
  }
}
